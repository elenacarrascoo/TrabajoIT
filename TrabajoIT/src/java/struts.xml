<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        <action name="loginForm" class="acciones.indexAction">
            <result name="success">/login.jsp</result>
        </action>
        <action name="registrarForm" class="acciones.indexAction" method="registrarForm">
            <result name="success">/registro.jsp</result>
        </action>
        
        <action name="login" class="acciones.indexAction" method="comprobarLogin">
            <result name="propietario">/propietario.jsp</result>
            <result name="veterinario">/veterinario.jsp</result>
            <result name="error">/login.jsp</result>
        </action>
        
        <action name="registrarPropietario" class="acciones.propietarioAction">
            <result name="success">/login.jsp</result>
        </action>
    </package>
</struts>
